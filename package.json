{
  "name": "esri-flux-react",
  "version": "1.0.0",
  "description": "Simple demo application using Esri's JavaScript API and React. It also shows how to use the Flux architecture in a map based application.",
  "scripts": {
    "start": "npm run watch",
    "watch": "npm run copy && npm run shim && npm run mkdirs && npm run stylus & npm run jade & npm run babel",

    "copy": "gulp copy",
    "shim": "gulp babel:polyfill",
    "mkdirs": "mkdir -p build/css && mkdir -p build/css/images",
    "stylus": "stylus src/css/base.styl -l --watch & stylus src/css/app.styl -o build/css -l --watch",
    "jade": "jade src/index.jade -O src/index.json -P -o build --watch",
    "babel": "babel src --ignore 'bower' --modules amd --out-dir build -w"
  },
  "keywords": [
    "esri",
    "map",
    "react",
    "flux",
    "javascript",
    "arcgis",
    "template",
    "lodash",
    "requirejs",
    "jade",
    "stylus",
    "jsx",
    "es2015",
    "esNext",
    "es6",
    "babel"
  ],
  "author": "Robert Winterbottom",
  "license": "MIT",
  "dependencies": {
    "babel": "^5.6.14",
    "gulp": "^3.9.0",
    "gulp-umd": "^0.2.0",
    "jade": "^1.9.2",
    "react-tools": "^0.13.1",
    "requirejs": "^2.1.17",
    "stylus": "^0.50.0"
  },
  "devDependencies": {
    "react": "^0.13.1"
  }
}
