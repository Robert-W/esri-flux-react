{
  "name": "esri-flux-react",
  "version": "1.0.0",
  "description": "Simple demo application using Esri's JavaScript API and React. It also shows how to use the Flux architecture in a map based application.",
  "scripts": {
    "start": "npm run watch",
    "watch": "npm run gulp && npm run imagemin && npm run mkdirs && npm run stylus & npm run jade & npm run babel",
    "dist": "npm run prep && npm run imagemin:dist && npm run stylus:dist && npm run jade:dist && npm run optimize",

    "gulp": "npm run copy && npm run shim",
    "copy": "gulp copy",
    "shim": "gulp babel:polyfill",
    "imagemin": "gulp imagemin:build",
    "mkdirs": "mkdir -p build/css",
    "stylus": "stylus src/css/base.styl -l --watch & stylus src/css/app.styl -o build/css -l --watch",
    "jade": "jade src/index.jade -O src/index.json -P -o build --watch",
    "babel": "babel src --ignore 'bower' --modules amd --out-dir build -w",

    "prep": "rm -rf dist && mkdir -p dist/css",
    "imagemin:dist": "gulp imagemin:dist",
    "stylus:dist": "stylus src/css/base.styl --compress & stylus src/css/app.styl --compress -o dist/css",
    "jade:dist": "jade src/index.jade -O src/index.json -P -o dist",
    "optimize": "npm run gulp && r.js -o app.build.js"

  },
  "keywords": [
    "esri",
    "map",
    "react",
    "flux",
    "javascript",
    "arcgis",
    "template",
    "lodash",
    "requirejs",
    "jade",
    "stylus",
    "jsx",
    "es2015",
    "esNext",
    "es6",
    "babel"
  ],
  "author": "Robert Winterbottom",
  "license": "MIT",
  "dependencies": {
    "babel": "^5.6.14",
    "gulp": "^3.9.0",
    "gulp-imagemin": "^2.3.0",
    "gulp-umd": "^0.2.0",
    "jade": "^1.9.2",
    "react-tools": "^0.13.1",
    "requirejs": "^2.1.17",
    "stylus": "^0.50.0"
  },
  "devDependencies": {
    "react": "^0.13.1"
  }
}
