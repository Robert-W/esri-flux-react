.loading-container
  position absolute
  left calc(50% - 50px)
  top calc(50% - 50px)
  text-align center
  height 100px
  width 100px

.loader
  -webkit-animation loader 1s ease infinite
  animation loader 1s ease infinite
  border-right 1px solid $loading
  border-top 4px solid $loading
  border-radius(100%)
  margin 5px auto
  height 64px
  width 64px
  @keyframes loader
    to
      transform rotate( 360deg )
  @-webkit-keyframes loader
    to
      transform rotate( 360deg )

.loader-label
  -webkit-animation fader 3s ease-in-out infinite
  animation fader 3s ease-in-out infinite
  text-transform uppercase
  font-size 11px
  color black
  margin 10px
  opacity 0
  @keyframes fader
    50%
      opacity 1
    100%
      opacity 0
  @-webkit-keyframes fader
    50%
      opacity 1
    100%
      opacity 0
