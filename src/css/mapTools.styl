.map-buttons
  border 1px solid $mainBorder
  border-radius(5px)
  position absolute
  background #FFF
  height 30px
  width 30px
  z-index 5

.basemap-gallery
  right 10px
  top 80px

.basemap-gallery-icon
  border-radius(5px)
  position absolute
  height 30px
  width 30px
  right 0
  top 0

.basemap-gallery-list
  position absolute
  overflow-y auto
  padding 0
  margin 0
  top 30px
  bottom 0
  right 0
  left 0

.basemap-gallery-item
  border-bottom 1px solid $mainBorder
  transition background .5s ease
  padding 0 0 0 60px
  height 60px
  &.active
  &:hover
    background $activeBackground
  &:first-child
    border-top 1px solid $mainBorder
  &:last-child
    border-radius-bottom(5px)
    border-bottom none

.basemap-gallery-item-icon
  border 1px solid $mainBorder
  border-radius(50%)
  position absolute
  height 48px
  width @height
  left 5px
  top 5px

.basemap-gallery-item-label
  padding-left 5px
  line-height 60px
  font-size 12px
